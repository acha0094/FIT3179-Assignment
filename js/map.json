{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "config": {
        "background": "rgb(253, 239, 223)"
    },
    "params": [
        {
            "name": "zoom_level",
            "value": 2800,
            "bind": {
                "input": "range",
                "min": 2800,
                "max": 15000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [108.26, 4],
            "bind": {
                "input": "select",
                "options": [
                    [108.26, 4],
                    [101.8, 3],
                    [111.8, 4.8]
                ],
                "labels": ["Malaysia", "Kuala Lumpur", "East Malaysia"],
                "name": "Map Centre: "
            }
        },
        {
            "name": "year_selection",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 2020,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "projection": {
        "type": "mercator",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
    },
    "layer": [
        {
            "data": {
                "values": [
                    {"rect": 10}
                ]
            },
            "mark": {"type": "rect", "fill": "skyblue"}
        },
        {
            "data": {
                "url": "js/malaysia.json",
                "format": {"type": "topojson", "feature": "states"}
            },
            "mark": {
                "type": "geoshape",
                "fill": "white",
                "stroke": "black",
                "strokeWidth": 0.4
            }
        },
        {
            "params": [
                {
                    "name": "highlight",
                    "select": {"type": "point", "on": "mouseover"}
                }
            ],
            "data": {
                "url": "data/epidemic/total_cases_state.csv"
            },
            "transform": [
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "js/malaysia.json",
                            "format": {"type": "topojson", "feature": "states"}
                        },
                        "key": "properties.Name"
                    },
                    "as": "geo"
                },
                {"calculate": "datum.cases_new/datum.population * 10000", "as": "Cases per 10,000 Population"},
                {"filter": "datum.year == year_selection"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.4
            },
            "encoding": {
                "shape": {"field": "geo", "type": "geojson"},
                "color": {
                    "field": "Cases per 10,000 Population",
                    "type": "quantitative",
                    "scale": {"type": "log", "scheme": "oranges"},
                    "legend": {
                        "title": ["Cases per", "10,000", "Population"]
                    }
                },
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"field": "year", "type": "quantitative", "title": "Year"},
                    {"field": "cases_new", "type": "quantitative", "title": "Total Cases"},
                    {"field": "population", "type": "quantitative", "title": "Population"},
                    {"field": "Cases per 10,000 Population", "type": "quantitative", "format": ".2f"}
                ],
                "fillOpacity": {
                    "condition": {"param": "highlight", "value": 1},
                    "value": 0.25
                }
            }
        }
    ]
}
