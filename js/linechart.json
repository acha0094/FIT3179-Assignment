{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Malaysia COVID-19 Daily New Cases",
        "align": "center",
        "anchor": "middle"
    },
    "data": {"url": "data/epidemic/cases_state.csv"},
    "vconcat": [
        {
            "width": 800,
            "height": 400,
            "encoding": {
                "x": {
                    "field": "date", 
                    "type": "temporal", 
                    "title": "",
                    "scale": {"domain": {"param": "brush"}}
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "baseline": "middle",
                        "dx": -12,
                        "font": "sans-serif",
                        "fontSize": 12,
                        "fontStyle": "italic"
                    },
                    "encoding": {
                        "text": {"value": "Average Number of New Cases in Selangor: 1518"},
                        "color": {"value": "black"},
                        "x": {"value": 290},
                        "y": {"datum": 1800, "type": "quantitative"}
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "baseline": "middle",
                        "dx": -12,
                        "font": "sans-serif",
                        "fontSize": 12,
                        "fontStyle": "italic"
                    },
                    "encoding": {
                        "text": {"value": "Highest Number of New Cases in Selangor: 11692"},
                        "color": {"value": "black"},
                        "x": {"value": 650},
                        "y": {"datum": 11600, "type": "quantitative"}
                    }
                },
                {
                    "transform": [
                        {
                            "pivot": "state", 
                            "value": "cases_new", 
                            "groupby": ["date"]
                        }
                    ],
                    "mark": "rule",
                    "encoding": {
                        "opacity": {
                            "condition": {"value": 0.5, "param": "hover", "empty": false},
                            "value": 0
                        },
                        "tooltip": [
                            {"field": "date", "type": "temporal", "title": "Date"},
                            {"field": "Johor", "type": "quantitative"},
                            {"field": "Kedah", "type": "quantitative"},
                            {"field": "Kelantan", "type": "quantitative"},
                            {"field": "Melaka", "type": "quantitative"},
                            {"field": "Negeri Sembilan", "type": "quantitative"},
                            {"field": "Pahang", "type": "quantitative"},
                            {"field": "Perak", "type": "quantitative"},
                            {"field": "Perlis", "type": "quantitative"},
                            {"field": "Pulau Pinang", "type": "quantitative"},
                            {"field": "Sabah", "type": "quantitative"},
                            {"field": "Sarawak", "type": "quantitative"},
                            {"field": "Selangor", "type": "quantitative"},
                            {"field": "Terengganu", "type": "quantitative"},
                            {"field": "Kuala Lumpur", "type": "quantitative"},
                            {"field": "Labuan", "type": "quantitative"},
                            {"field": "Putrajaya", "type": "quantitative"}
                        ]
                    },
                    "params": [
                        {
                            "name": "hover",
                            "select": {
                                "type": "point",
                                "fields": ["date"],
                                "nearest": true,
                                "on": "mouseover",
                                "clear": "mouseout"
                            }
                        }
                    ]
                },
                {
                    "mark": "line",
                    "encoding": {
                        "x": {
                            "field": "date", 
                            "type": "temporal", 
                            "title": "",
                            "scale": {"domain": {"param": "brush"}}
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative",
                            "title": "Daily Number of New Cases"
                        },
                        "color": {
                            "field": "state",
                            "type": "nominal"
                        },
                        "opacity": {
                            "condition": {
                                "param": "state_highlight",
                                "value": 0.7
                            },
                            "value": 0.07
                        },
                        "tooltip": [
                            {"field": "state", "type": "nominal", "title": "State"},
                            {"field": "date", "type": "temporal", "title": "Date"},
                            {"field": "cases_new", "type": "quantitative", "title": "Cases"}
                        ]
                    },
                    "params": [
                        {
                            "name": "state_highlight",
                            "select": {
                                "type": "point",
                                "fields": ["state"]
                            },
                            "bind": "legend"
                        }
                    ]
                }
            ]
        },
        {
            "width": 800,
            "height": 40,
            "mark": "area",
            "params": [
                {
                    "name": "brush", 
                    "select": {
                        "type": "interval",
                        "encodings": ["x"]
                    }
                }
            ],
            "encoding": {
                "x": {"field": "date", "type": "temporal", "title": "Date"}
            }
        }
    ]
    
}